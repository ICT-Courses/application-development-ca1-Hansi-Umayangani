<Window x:Class="AquaPOS.User_Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaPOS"
        mc:Ignorable="d"
        Title="User Login" Height="720" Width="1280" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" Background="#01132D">

    <Window.Resources>
        <!-- Rounded TextBox and PasswordBox Style -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="Control">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border CornerRadius="8" BorderBrush="#FF0807A0" BorderThickness="2.5" Background="White">
                            <ScrollViewer Margin="5" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="15" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Height="720">
        <!-- Background Image -->
        <Image Source="pack://application:,,,/resources/icons/logo.png" Height="232" 
           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,54,0,0" Stretch="Fill" Width="392"/>

        <!-- Username Label & UsernameTextBox -->
        <Label Content="Username" FontSize="16" FontWeight="Bold" Foreground="White" 
           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,301,0,0"/>
        <TextBox x:Name="UsernameTextBox" Width="300" Height="32" FontSize="14"
             Style="{StaticResource RoundedTextBoxStyle}"
             HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Password Label & PasswordBox -->
        <Label Content="Password" FontSize="16" FontWeight="Bold" Foreground="White" 
           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,390,0,0"/>
        <PasswordBox x:Name="PasswordBox" Width="300" Height="32" FontSize="14"
                 Style="{StaticResource RoundedTextBoxStyle}"
                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,421,0,0"/>
        <TextBox x:Name="PasswordTextBox" Width="300" Height="30" FontSize="14"
             Style="{StaticResource RoundedTextBoxStyle}"
             HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,421,0,0" 
             Visibility="Collapsed"/>

        <!-- Show Password Checkbox -->
        <CheckBox x:Name="ShowPasswordCheckbox" Content="Show Password" Foreground="White" FontSize="12"
              HorizontalAlignment="Left" VerticalAlignment="Top" Margin="688,456,0,0" 
              Checked="ShowPasswordCheckbox_Checked" Unchecked="ShowPasswordCheckbox_Unchecked"/>

        <!-- Login Button -->
        <Button x:Name="LoginButton" Content="LOGIN" Width="84" Height="50" FontSize="14" FontWeight="Bold" 
            Background="Aquamarine" Foreground="#FF020203" BorderThickness="0"
            Style="{StaticResource RoundedButtonStyle}"
            HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,496,0,0" Click="LoginButton_Click"/>

        <!-- Create Account Button -->
        <Button x:Name="CreateAccountButton" Content="Create Account" Width="162" Height="47" FontSize="16" FontWeight="Bold" 
            Background="Aqua" Foreground="Black" BorderThickness="0"
            Style="{StaticResource RoundedButtonStyle}"
            HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,578,0,0" Click="CreateAccountButton_Click" BorderBrush="#FF0F35C8"/>
    </Grid>
</Window>
