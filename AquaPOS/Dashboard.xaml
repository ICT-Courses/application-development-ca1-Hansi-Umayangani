<Window x:Class="AquaPOS.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaPOS"
        mc:Ignorable="d"
        Title="Dashboard" Height="673" Width="1262" Background="#01132D" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Sidebar Panel -->
        <Border Background="#003547" Width="320" HorizontalAlignment="Left">
            <StackPanel>
                <!-- Logo/Image -->
                <Image Source="pack://application:,,,/resources/icons/logo.png" 
                       Width="291" Height="191" 
                       HorizontalAlignment="Center" 
                       Margin="0,54,0,0"/>

                <!-- Dashboard Button -->
                <Button x:Name="DashboardButton" Content="Dashboard" Foreground="White" Background="Transparent" BorderBrush="White" 
                        FontSize="14" Width="122" Height="35" Margin="0,26,0,0" 
                        Click="DashboardButton_Click" HorizontalAlignment="Center"/>

                <!-- Inventory Management Button -->
                <Button x:Name="InventoryManagementButton" Content="Inventory Management" Foreground="White" Background="Transparent" BorderBrush="White" 
                        FontSize="14" Width="206" Height="35" 
                        Click="InventoryManagementButton_Click" Margin="0,40,0,0"/>

                <!-- Sales Reports Button -->
                <Button x:Name="SalesReportButton" Content="Sales Reports" Foreground="White" Background="Transparent" BorderBrush="White" 
                FontSize="14" Width="140" Height="35" 
                Click="SalesReportsButton_Click" Margin="0,40,0,0"/>

                <!-- Exit Button -->
                <Button x:Name="ExitButton" Content="EXIT" Foreground="White" Background="#FF003547" BorderBrush="#FF003547" 
                FontSize="14" Width="60" Height="35" 
                Click="ExitButton_Click" Margin="0,35,0,0"/>

            </StackPanel>
        </Border>
    </Grid>

</Window>
