<Window x:Class="AquaPOS.User_Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaPOS"
        mc:Ignorable="d"
        Icon="pack://application:,,,/resources/Images/App_Logo/AquaPOS_Logo_Icon_New.ico"
        Title="User Registration" Height="720" Width="1280" ResizeMode="CanResize" WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/resources/Images/Background_Images/Main_Background_Image.png"
                    Stretch="Fill"/>
    </Window.Background>

    <Window.Resources>
        <!-- Rounded TextBox and PasswordBox Style -->
        <Style x:Key="RoundedTextBoxStyle" TargetType="Control">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Control">
                        <Border CornerRadius="8" BorderBrush="#FF0807A0" BorderThickness="2" Background="White">
                            <ScrollViewer Margin="5" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="15" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Height="720" Margin="0,0,0,-16">

        <!-- Background Image -->
        <Image Source="pack://application:,,,/resources/Images/App_Logo/AquaPOS_Logo.png" 
               Width="396" Height="232" 
               HorizontalAlignment="Center" VerticalAlignment="Top" 
               Margin="0,54,0,0"/>

        <!-- Username Label & TextBox -->
        <Label Content="Username" FontSize="16" FontWeight="Bold" Foreground="White" 
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,359,0,0" Height="30" Width="86"/>
        <TextBox x:Name="UsernameTextBox" Width="305" Height="36" FontSize="14"
                 Style="{StaticResource RoundedTextBoxStyle}"
                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,389,0,0" BorderBrush="#FF07153F"/>

        <!-- Password Label & PasswordBox -->
        <Label Content="Password" FontSize="16" FontWeight="Bold" Foreground="White" 
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,433,0,0" Width="82"/>
        <PasswordBox x:Name="PasswordBox" Width="305" Height="36" FontSize="14"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,463,0,0"/>
        <TextBox x:Name="PasswordTextBox" Width="300" Height="36" FontSize="14"
                 Style="{StaticResource RoundedTextBoxStyle}"
                 HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,421,0,0" 
                 Visibility="Collapsed"/>

        <!-- Re-enter Password Label & TextBox -->
        <Label Content="Re-enter Password" FontSize="16" FontWeight="Bold" Foreground="White" 
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,507,0,0" Width="152"/>
        <PasswordBox x:Name="ReenterPasswordBox" Width="305" Height="36" FontSize="14"
                     Style="{StaticResource RoundedTextBoxStyle}"
                     HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,537,0,0"/>

        <!-- User Role Label & ComboBox -->
        <Label Content="User Role" FontSize="16" FontWeight="Bold" Foreground="White" 
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,285,0,0" Width="82"/>
        <ComboBox x:Name="UserRoleComboBox" Width="202" Height="32" FontSize="14"
                  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,318,0,0" Background="Black" BorderBrush="#FF5AC4F6">
            <ComboBoxItem Content="Cashier"/>
            <ComboBoxItem Content="Admin"/>
        </ComboBox>

        <!-- Create User Button -->
        <Button x:Name="CreateUserButton" Content="Create Account" Width="164" Height="44" FontSize="16" FontWeight="Bold" 
            Background="#FF00CCEE" Foreground="Black" BorderThickness="0"
            Style="{StaticResource RoundedButtonStyle}"
            HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,603,0,0" Click="CreateUserButton_Click" BorderBrush="#FF0F35C8"/>

        <Button Content="←"
        Width="57" Height="60"
        Click="BackButton_Click"
        FontSize="50" FontWeight="Bold"
        FontFamily="Bernard MT Condensed"
        Background="Transparent"
        Foreground="White"
        BorderBrush="Transparent"
        Padding="0"
        HorizontalAlignment="Right"
        HorizontalContentAlignment="Center"
        VerticalAlignment="Top"
        VerticalContentAlignment="Center" Margin="0,24,20,0"/>

    </Grid>


</Window>
